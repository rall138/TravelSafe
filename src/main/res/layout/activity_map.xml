        <ImageButton android:id="@+id/btnAddLocation" android:backgroundTint="#9E9E9E" android:layout_margin="5dp" android:background="@drawable/add_location_18dp"/>
        <ImageButton android:id="@+id/btnAddGasStation" android:backgroundTint="#9E9E9E" android:layout_margin="5dp" android:background="@drawable/local_gas_station_18dp"/>
        <ImageButton android:id="@+id/btnAddRestaurant" android:backgroundTint="#9E9E9E" android:layout_margin="5dp" android:background="@drawable/restaurant_18dp"/>

